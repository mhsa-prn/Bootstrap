<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bootstrap_Sample</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" rel="stylesheet" />

</head>
<body>
    <header class="container">
        <div class="row ">
            <div class="col">
                <img style="height:100px" src="~/Images/top.png"/>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="direction:rtl">
            <a class="navbar-brand" href="#" style="font-family:'B Roya'">مجموعه فست فودهای شهر تهران</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="#" style="font-family:'B Roya'">خانه <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="#" style="font-family:'B Roya'">رستوران ها</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="#" style="font-family:'B Roya'">دربارۀ ما</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="#" style="font-family:'B Roya'">تماس با ما</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="row">
            <div class="col-12">
                <img class="img-fluid" src="~/Images/baner.png" />
            </div>
        </div>

    </header>
    <div class="container">
        @RenderBody()
    </div>

    
</body>
</html>
